// Define variables
$primary-color = #2c2c54
$secondary-color = #d4af37
$background-color = #f5f5dc
$button-hover-color = #fff
$button-text-hover-color = #d4af37
$border-radius = 10px
$box-shadow-color = rgba(0, 0, 0, 0.15)
$box-shadow-hover-color = rgba(0, 0, 0, 0.2)
$font-size-small = 16px
$font-size-medium = 14px
$font-size-text = 12px

// Mixin for button styling
button-styles(color, hover-color)
  background-color: color
  color: white
  border: none
  border-radius: 5px
  transition: transform 0.2s ease, background-color 0.2s ease
  &:hover
    background-color: hover-color
    color: $secondary-color

// Mixin for content block hover effects
content-block-hover
  box-shadow: 0 5px 25px $box-shadow-hover-color

* 
  margin: 0
  padding: 0
  box-sizing: border-box

header
  height: 70px
  display: grid
  grid-template-columns: 190px auto 50px
  column-gap: 30px
  background-color: $primary-color
  padding: 10px 15px
  color: white

  .logo
    height: 50px
    width: 200px
    background-color: #fff
    border: 2px solid $secondary-color
    background-image: url(https://lihtaryk.com.ua/wp-content/uploads/2018/03/pikasso-1024x447.jpg)
    background-size: cover
    border-radius: 8px

  .search input
    width: 100%
    height: 50px
    box-sizing: border-box
    border: 2px solid #ccc
    border-radius: 4px
    font-size: $font-size-small
    padding: 0 10px
    background-color: white
    background-image: url(https://www.iconpacks.net/icons/2/free-search-icon-2911-thumb.png)
    background-position: calc(100% - 10px) 
    background-repeat: no-repeat
    background-size: 25px 25px
    transition: border-color 0.3s ease

  .search input:focus
    border-color: $primary-color
    outline: none

  button
    height: 50px
    width: 50px
    background-color: #5a5a88
    color: $primary-color
    border: none
    border-radius: $border-radius
    font-weight: bold
    cursor: pointer
    transition: transform 0.2s ease, background-color 0.2s ease
    &:hover
      background-color: $button-hover-color
      color: $button-text-hover-color
      transform: scale(1.1)

.container
  display: grid
  grid-template-columns: 210px auto
  gap: 20px
  padding: 10px
  border-bottom: 2px solid $secondary-color
  background-color: $background-color

  .sidebar
    display: grid
    grid-template-rows: repeat(auto-fill, 20px)
    row-gap: 20px
    padding: 15px
    border: 2px solid $secondary-color
    background-color: #fff
    border-radius: 15px
    box-shadow: 0 5px 15px $box-shadow-color

  a
    font-size: $font-size-small
    color: $primary-color
    text-decoration: none
    text-align: left
    background-color: $secondary-color
    padding: 3px
    border-radius: 5px
    transition: background-color 0.3s ease, color 0.3s ease
    &:hover
      background-color: $primary-color
      transform: scale(1.02)
      color: $secondary-color

.content
  display: grid
  grid-template-columns: repeat(auto-fill, 160px)
  grid-template-rows: repeat(auto-fill, 230px)
  gap: 15px 30px
  height: fit-content

.content-block
  width: 160px
  height: 230px
  background-color: $primary-color
  border: 2px solid #d6b700
  box-shadow: 0 4px 20px $box-shadow-color
  border-radius: $border-radius
  transition: transform 0.3s ease, box-shadow 0.3s ease
  &:hover
    content-block-hover()

  .image-placeholder
    height: 140px
    background-color: #5a5a88
    border-radius: $border-radius $border-radius 0 0
    background-size: cover
    background-repeat: no-repeat
    background-position: center

  .content-info
    padding: 10px
    display: grid
    grid-template-columns: 80px 50px
    align-items: center
    gap: 10px

    button
      width: 50px
      height: 60px
      button-styles($secondary-color, $button-hover-color)
      &:hover
        background-color: $button-hover-color
        color: $secondary-color

  .content-text
    display: grid
    grid-auto-rows: auto
    height: 100%
    align-items: end
    color: #fff

  .content-text h4
    font-size: $font-size-medium
    overflow: hidden
    font-weight: bold

  .content-text span
    font-size: $font-size-text
    color: #ddd

@media (max-width: 768px)
  .container
    grid-template-columns: 1fr
    gap: 10px

  .content
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr))
    gap: 10px 15px

  .content-block
    width: 100%

  .content-info
    grid-template-columns: 1fr 50px
    justify-content: center

  .sidebar
    height: fit-content

@media (max-width: 480px)
  header
    height: 210px
    grid-template-columns: auto

  .logo
    align-self: center
    justify-self: center

  .search input
    align-self: center
    justify-self: center
    font-size: 14px
    background-size: 20px 20px

  button
    width: 80%
    align-self: center
    justify-self: center
    font-size: 14px

  .sidebar
    padding: 10px
    row-gap: 10px
