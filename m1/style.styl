$navy = #2c2c54
$gold = #d4af37
$white = #fff
$shadow-light = rgba(0, 0, 0, 0.1)
$shadow-medium = rgba(0, 0, 0, 0.2)
$shadow-dark = rgba(0, 0, 0, 0.15)

border-radius-mixin(radius)
  border-radius: radius

box-shadow-mixin(shadow)
  box-shadow: 0 4px 20px shadow

hover-color-mixin()
  &:hover
    color: $gold

flex-center-between()
  display: flex
  justify-content: space-between
  align-items: center

* 
  margin: 0
  padding: 0
  box-sizing: border-box
  font-family: 'Arial', sans-serif

body
  background: $white

header
  height: 70px
  flex-center-between()
  padding: 10px 15px
  border-bottom: 2px solid $gold
  background-color: $navy
  color: $white

  .logo
    height: 50px
    width: 190px
    border: 2px solid $gold
    background-color: $white
    background-image: url('https://lihtaryk.com.ua/wp-content/uploads/2018/03/pikasso-1024x447.jpg')
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    border-radius-mixin(8px)

  .search
    width: 230px
    height: 50px

    input
      width: 100%
      height: 100%
      border: 2px solid #ccc
      border-radius-mixin(4px)
      font-size: 16px
      background: white url('https://www.iconpacks.net/icons/2/free-search-icon-2911-thumb.png') 100% no-repeat
      background-size: 25px 25px

.menu
  margin: 10px
  height: 50px
  background-color: $navy
  flex-center-between()
  padding: 0 20%
  border-radius-mixin(8px)
  box-shadow-mixin($shadow-light)

  a
    color: $white
    text-decoration: none
    font-size: 14px
    hover-color-mixin()

.container
  display: flex
  height: 810px
  padding: 10px
  border-bottom: 2px solid $gold

  .sidebar, .trend
    border: 2px solid $gold
    border-radius-mixin(8px)
    box-shadow-mixin($shadow-medium)
    display: flex
    flex-direction: column
    row-gap: 25px
    padding: 20px 10px

    a
      color: black
      text-decoration: none
      font-size: 14px
      hover-color-mixin()

  .sidebar
    width: 200px
    height: 650px

  .trend
    width: 230px
    height: 400px

  .content
    width: calc(100% - 430px)
    height: fit-content
    display: flex
    flex-direction: column

    .content-block
      margin: 0 10px 15px 20px
      border: 1px solid #d6b700
      border-radius-mixin(8px)
      box-shadow-mixin($shadow-dark)
      transition: transform 0.3s ease, box-shadow 0.3s ease
      background-color: $navy
      color: $white

      .image-placeholder
        height: 250px
        background: $navy url('https://f.cultura.city/photo/8696/x-KeK.jpg') center/cover no-repeat
        border-radius-mixin(8px 8px 0 0)

      p
        height: 180px
        padding: 10px

@media (max-width: 1024px)
  header .search
    width: 100%
    padding-left: 10px

  .menu
    padding: 0 10%

  .container
    .content
      width: 100%

    .trend
      margin-bottom: 10px

@media (max-width: 768px)
  header .logo
    width: 150px

  .menu
    padding: 0 10%

  .container
    flex-direction: column

    .sidebar, .trend
      margin-bottom: 20px
      width: 100%
      order: -1
      gap: 10px

    .content .content-block
      margin: 10px 0
      padding: 15px

@media (max-width: 480px)
  header
    flex-direction: column
    align-items: center
    height: 140px

  header .logo
    width: 120px

  .menu
    padding: 0 10%

    a
      font-size: 10px

  .container
    .sidebar, .trend
      margin-bottom: 20px
      gap: 5px

    .content .content-block
      margin: 10px 0
      padding: 10px

      p
        font-size: 14px
